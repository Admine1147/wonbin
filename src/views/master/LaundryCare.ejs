<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
      integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/master/masterHome.css" />
    <script src="/js/master/main.js" defer></script>
    <title>세탁물 관리</title>
    <style type="text/css">
      .tg {
        border-collapse: collapse;
        border-color: #9abad9;
        border-spacing: 0;
      }

      .tg td {
        background-color: #ebf5ff;
        border-color: #9abad9;
        border-style: solid;
        border-width: 1px;
        color: #444;
        font-family: Arial, sans-serif;
        font-size: 14px;
        overflow: hidden;
        padding: 10px 5px;
        word-break: normal;
      }
      .tg th {
        background-color: #409cff;
        border-color: #9abad9;
        border-style: solid;
        border-width: 1px;
        color: #fff;
        font-family: Arial, sans-serif;
        font-size: 30px;
        font-weight: normal;
        overflow: hidden;
        padding: 10px 5px;
        word-break: normal;
      }
      .tg .tg-c3ow {
        border-color: inherit;
        text-align: center;
        vertical-align: top;
        font-size: 30px;
        width: 150px;
      }
      .tg .tg-9d8n {
        border-color: inherit;
        font-size: 22px;
        text-align: center;
        vertical-align: top;
      }
      div {
        width: 100%;
        height: auto;
      }
      .btn {
        height: 50px;
      }
    </style>
  </head>
  <body id="order-manage">
    <nav class="navbar navbar-expand-custom navbar-mainbg">
      <a class="navbar-brand navbar-logo" href="/masters">10-10-gaza</a>
      <% const point = Number(master_point); %>
      <div class="point">현재 포인트 : <%= point %></div>

      <button
        class="navbar-toggler"
        type="button"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars text-white"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <div class="hori-selector">
            <div class="left"></div>
            <div class="right"></div>
          </div>
          <li class="nav-item">
            <a class="nav-link" href="/masters"><i class="far fa-address-book"></i>요청 목록</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/masters/laundryCare"><i class="fas fa-tachometer-alt"></i>내 세탁물 관리</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/masters/reviews"><i class="far fa-clone"></i>내 세탁소 리뷰보기</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="far fa-clone"></i>로그 아웃</a>
          </li>
        </ul>
      </div>
    </nav>
  </body>
  <script>
    $(document).ready(function () {
      $.ajax({
        type: 'GET',
        url: '/api/orders/laundryCare',
        data: {},
        success: function (response) {
          console.log('세탁물 관리 연결 됨');
          if (response.success === false) {
            alert(response.message);
            return;
          }

          let rows = response['order'];
          let order_id = rows.order_id;
          let user_id = rows.user_id;
          let status = rows.status;
          let nickname = rows.nickname;
          let phonenumber = rows.phonenumber;
          let address = rows.address;
          let comment = rows.comment;
          let nowStep = '';
          let nextStep = '';
          let img_name = response.img_name;

          let img_src = '';

          if (!img_name) {
            img_src =
              'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSKt7ZDite8uarH2t_0xmkhpJufXePECdS1Uw&usqp=CAU';
          } else {
            img_src = `/image/userRequest/user_${user_id}/order_${order_id}/${img_name}`;
          }

          switch (status) {
            case 2:
              nowStep = '수거 중';
              nextStep = '수거 완료';
              break;

            case 3:
              nowStep = '수거 완료';
              nextStep = '배송 중';
              break;

            case 4:
              nowStep = '배송 중';
              nextStep = '배송 완료';
              break;
          }

          let temp_html = `<table class="tg" style="margin-left: auto; margin-right: auto; margin-top: 200px; margin-bottom: 200px;">
                              <colgroup>
                                <col style="width: 80px" />
                                <col style="width: 80px" />
                                <col style="width: 80px" />
                                <col style="width: 67px" />
                              </colgroup>
                              <thead>
                                <tr>
                                  <th class="tg-c3ow" colspan="4">세탁 받은 목록</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td class="tg-c3ow">닉네임</td>
                                  <td class="tg-c3ow" colspan="3">${nickname}</td>
                                </tr>
                                <tr>
                                  <td class="tg-c3ow">폰번호</td>
                                  <td class="tg-c3ow" colspan="3">${phonenumber}</td>
                                </tr>
                                <tr>
                                  <td class="tg-c3ow">주소</td>
                                  <td class="tg-c3ow" colspan="3">${address}</td>
                                </tr>
                                <tr>
                                  <td class="tg-9d8n" colspan="4" rowspan="6">
                                    <div>
                                      <img
                                        src="${img_src}"
                                      />
                                    </div>
                                  </td>
                                </tr>
                                <tr></tr>
                                <tr></tr>
                                <tr></tr>
                                <tr></tr>
                                <tr></tr>
                                <tr>
                                  <td class="tg-c3ow" colspan="4" rowspan="2">${comment}</td>
                                </tr>
                                <tr></tr>
                                <tr>
                                  <td class="tg-c3ow" colspan="2" rowspan="1">${nowStep}</td>
                                  <td class="tg-c3ow" colspan="2" rowspan="1">
                                    <button class="btn" onclick="nextStep(${order_id})">
                                      ${nextStep}
                                    </button></td>
                                  </tr>
                                </tbody>
                              </table>`;
          $('#order-manage').append(temp_html);
        },
      });
    });

    const nextStep = function (order_id) {
      $.ajax({
        type: 'PUT',
        url: `/api/orders/laundryCare/${order_id}`,
        data: {},
        success: function (response) {
          alert('다음 단계로~');
          location.reload();
        },
      });
    };
  </script>
</html>
